{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./cli-dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "cli/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cli-dist",
    "src",
    "templates"
  ]
}